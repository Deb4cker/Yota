<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Yota.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Yota"
    Shell.FlyoutBehavior="Disabled"
    Title="Yota">

    <TabBar>
        <ShellContent Title="Home" ContentTemplate="{DataTemplate local:MainPage}" />
        <ShellContent Title="Player" ContentTemplate="{DataTemplate local:PlayerPage}" />
        <ShellContent Title="Flow" ContentTemplate="{DataTemplate local:FlowPage}" />
    </TabBar>

</Shell>
