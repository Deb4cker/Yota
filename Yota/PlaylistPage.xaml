<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Yota.PlaylistPage"
             Title="Carregando...">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" BackgroundColor="#13425C">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <Image 
            x:Name="PlaylistPicture"
            Source="default_playlist.png" 
            HeightRequest="120"
            WidthRequest="120"
            Aspect="AspectFit"
            Grid.Column="0" />

            <StackLayout 
                Grid.Column="1"
                VerticalOptions="Center" 
                Padding="20">

                <Label 
                    x:Name="PlaylistName" 
                    Text="Carregando..." 
                    TextColor="White" 
                    FontSize="Large" 
                    FontAttributes="Bold" />
                <Label 
                    x:Name="PlaylistDescription" 
                    Text="" 
                    TextColor="White" 
                    FontSize="Micro" />
                <Label 
                    x:Name="TotalDuration" 
                    Text="âŒš 00:00" 
                    TextColor="White" 
                    FontSize="Micro" />
            </StackLayout>

            <Grid.Shadow>
                <Shadow Brush="Black"
                Offset="60,60"
                Radius="100"
                Opacity="0.8 " />
            </Grid.Shadow>
        </Grid>

        <ScrollView Grid.Row="2">
            <ListView x:Name="PlaylistView" RowHeight="70" ItemSelected="OnPlayButtonClicked">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid Padding="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Image Source="{Binding Album.Cover}" Aspect="AspectFill" WidthRequest="50" HeightRequest="50" Grid.Column="0" />
                                <StackLayout Grid.Column="1" VerticalOptions="Center" Padding="10">
                                    <Label Text="{Binding Title}" FontAttributes="Bold" />
                                    <Label Text="{Binding Artist.Name}" FontSize="Small" />
                                </StackLayout>
                                <Label Text="{Binding Duration}" Grid.Column="2" HorizontalOptions="End" />
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollView>
    </Grid>
</ContentPage>